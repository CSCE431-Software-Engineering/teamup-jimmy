<% if flash[:alert].present? %>
  <div id="flash-alert" class="flash-alert">
    <div class="flash-alert-content">
      <p><%= flash[:alert] %></p>
    </div>
  </div>
  <script>
    var flash_alert = document.getElementById("flash-alert");
    var span = document.getElementsByClassName("close")[0];

    span.onclick = function() {flash_alert.style.display = "none";};

    window.onclick = function(event) {
      if (event.target == flash_alert) {
        flash_alert.style.display = "none";
      }
    };
    flash_alert.style.display = "inline-block";
  </script>
<% end %>

