<!-- app/views/pages/search.html.erb -->

<%= render 'pages/navbar' %>
<%= render(partial:'back', locals:{c: "pages", a: "browse", s: "back-btn"}) %>

<!-- Display Search Results -->
<% if @results.present? %>
  <h2>Search Results for "<%= @query %>"</h2>
  <p> <%= @results.count %> result(s) found </p>  
  <table class="user-info-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Birthday</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.gender %></td>
          <td><%= student.birthday %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p>No results found for "<%= @query %>"</p>
<% end %>
